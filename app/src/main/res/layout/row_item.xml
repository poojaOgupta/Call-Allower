<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/cardview_padding"
    android:paddingRight="@dimen/cardview_padding"
    android:paddingTop="@dimen/cardview_padding_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_cornered_rectangle">
        <TextView
            android:id="@+id/item_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/row_item_number_size"
            android:paddingLeft="@dimen/row_item_view_padding"
            android:paddingRight="@dimen/row_item_view_padding"
            android:layout_gravity="start"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/row_item_view_padding_bottom"
            android:textSize="@dimen/row_item_name_size"
            android:layout_gravity="end"
            android:paddingLeft="@dimen/row_item_view_padding"
            android:paddingRight="@dimen/row_item_view_padding"
            android:textColor="@android:color/white"/>
        <View
            android:id="@+id/item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/row_item_divider_gradient"/>
    </LinearLayout>

</android.support.v7.widget.CardView>